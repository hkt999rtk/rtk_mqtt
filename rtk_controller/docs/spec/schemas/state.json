{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtk.mqtt/schemas/state/1.0",
  "title": "RTK MQTT State Message Schema",
  "type": "object",
  "properties": {
    "schema": {
      "type": "string",
      "enum": ["state/1.0"]
    },
    "ts": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp in milliseconds"
    },
    "device_id": {
      "type": "string",
      "pattern": "^[a-f0-9]{12}$",
      "description": "Device MAC address without colons"
    },
    "health": {
      "type": "string",
      "enum": ["ok", "warning", "error", "critical"],
      "description": "Overall device health status"
    },
    "uptime_s": {
      "type": "integer",
      "minimum": 0,
      "description": "Device uptime in seconds"
    },
    "connection_status": {
      "type": "string",
      "enum": ["connected", "disconnected", "connecting", "error"]
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "device_type": {
          "type": "string",
          "enum": ["router", "switch", "ap", "nic", "sensor", "server"]
        },
        "diagnostics": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["schema", "ts", "device_id", "health"],
  "additionalProperties": true
}