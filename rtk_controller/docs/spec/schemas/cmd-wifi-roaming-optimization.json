{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtk.mqtt/schemas/cmd-wifi-roaming-optimization/1.0",
  "title": "RTK MQTT WiFi Roaming Optimization Command Schema",
  "description": "Schema for WiFi roaming optimization command",
  "allOf": [
    {
      "$ref": "cmd-request.json"
    },
    {
      "properties": {
        "schema": {
          "enum": ["cmd.wifi_roaming_optimization/1.0"]
        },
        "payload": {
          "properties": {
            "op": {
              "enum": ["wifi_roaming_optimization"]
            },
            "args": {
              "type": "object",
              "properties": {
                "current_bssid": {
                  "type": "string",
                  "pattern": "^([0-9a-fA-F]{2}:){5}[0-9a-fA-F]{2}$",
                  "description": "當前連接的BSSID"
                },
                "roaming_threshold": {
                  "type": "integer",
                  "minimum": -100,
                  "maximum": 0,
                  "description": "漫遊閾值(dBm)"
                },
                "scan_interval": {
                  "type": "integer",
                  "minimum": 5,
                  "maximum": 60,
                  "description": "掃描間隔(秒)"
                },
                "analyze_history": {
                  "type": "boolean",
                  "description": "是否分析歷史漫遊記錄"
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    }
  ]
}