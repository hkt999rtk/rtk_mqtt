{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtk.mqtt/schemas/cmd-qos-traffic-analysis/1.0",
  "title": "RTK MQTT QoS Traffic Analysis Command Schema",
  "description": "Schema for QoS traffic analysis command",
  "allOf": [
    {
      "$ref": "cmd-request.json"
    },
    {
      "properties": {
        "schema": {
          "enum": ["cmd.qos_traffic_analysis/1.0"]
        },
        "payload": {
          "properties": {
            "op": {
              "enum": ["qos_traffic_analysis"]
            },
            "args": {
              "type": "object",
              "properties": {
                "duration": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 3600,
                  "description": "監控持續時間(秒)"
                },
                "interfaces": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "監控的網路介面列表"
                },
                "analysis_type": {
                  "type": "string",
                  "enum": ["basic", "comprehensive", "realtime"],
                  "description": "分析類型"
                },
                "sampling_interval": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "取樣間隔(秒)"
                },
                "include_protocols": {
                  "type": "boolean",
                  "description": "是否包含協議層分析"
                }
              },
              "required": ["duration"],
              "additionalProperties": false
            }
          }
        }
      }
    }
  ]
}