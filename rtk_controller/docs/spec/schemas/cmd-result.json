{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://rtk.mqtt/schemas/cmd-result/1.0",
  "title": "RTK MQTT Command Result Schema",
  "description": "Schema for command result messages",
  "allOf": [
    {
      "$ref": "base.json"
    },
    {
      "properties": {
        "schema": {
          "pattern": "^cmd\\.[a-z_\\.]+\\.result/\\d+\\.\\d+$"
        },
        "payload": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "description": "對應的命令ID"
            },
            "status": {
              "type": "string",
              "enum": ["completed", "failed", "timeout"],
              "description": "執行狀態"
            },
            "result": {
              "type": "object",
              "description": "命令執行結果"
            },
            "error": {
              "type": ["string", "null"],
              "description": "錯誤信息"
            }
          },
          "required": ["id", "status"],
          "additionalProperties": false
        }
      }
    }
  ]
}