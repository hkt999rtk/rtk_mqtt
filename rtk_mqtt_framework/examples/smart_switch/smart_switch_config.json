{
  "mqtt_broker": "mqtt.example.com",
  "mqtt_port": 1883,
  "device_id": "smart-switch-001",
  "tenant": "smart_home",
  "site": "living_room",
  "mqtt_username": "switch_device",
  "telemetry_interval": 45,
  "event_cooldown": 60,
  "plugin_config": {
    "channels": {
      "channel_1": {
        "name": "主燈",
        "enabled": true,
        "max_current": 8.0,
        "default_state": "off",
        "schedule": {
          "enabled": false,
          "on_time": "08:00",
          "off_time": "22:00",
          "repeat_days": ["monday", "tuesday", "wednesday", "thursday", "friday"]
        }
      },
      "channel_2": {
        "name": "檯燈",
        "enabled": true,
        "max_current": 2.0,
        "default_state": "off",
        "schedule": {
          "enabled": true,
          "on_time": "18:30",
          "off_time": "23:00",
          "repeat_days": ["everyday"]
        }
      },
      "channel_3": {
        "name": "電扇",
        "enabled": true,
        "max_current": 1.5,
        "default_state": "off",
        "schedule": {
          "enabled": false,
          "on_time": "14:00",
          "off_time": "18:00",
          "repeat_days": ["saturday", "sunday"]
        }
      },
      "channel_4": {
        "name": "音響",
        "enabled": true,
        "max_current": 3.0,
        "default_state": "off",
        "schedule": {
          "enabled": false
        }
      }
    },
    "protection": {
      "overload_protection": true,
      "max_current_per_channel": 10.0,
      "max_total_current": 30.0,
      "temperature_protection": true,
      "max_temperature": 75.0,
      "auto_recovery": true,
      "recovery_delay_seconds": 300
    },
    "monitoring": {
      "power_monitoring": true,
      "current_monitoring": true,
      "voltage_monitoring": true,
      "energy_calculation": true,
      "sample_interval": 5
    },
    "control": {
      "manual_override": true,
      "remote_control": true,
      "local_button_control": true,
      "voice_control_support": false
    },
    "notifications": {
      "overload_events": {
        "enabled": true,
        "severity": "warning"
      },
      "schedule_operations": {
        "enabled": true,
        "severity": "info"
      },
      "manual_operations": {
        "enabled": false,
        "severity": "info"
      },
      "maintenance_alerts": {
        "enabled": true,
        "severity": "info"
      }
    },
    "energy_management": {
      "power_limit_enabled": false,
      "max_total_power": 2200.0,
      "priority_channels": [1, 2],
      "load_shedding": false
    }
  }
}