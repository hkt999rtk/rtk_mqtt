{
  "description": "跨平台設備範例配置檔案",
  "device": {
    "id": "cross_platform_device_001",
    "type": "cross_platform_demo",
    "name": "RTK 跨平台設備範例",
    "location": "開發環境",
    "manufacturer": "RTK 跨平台解決方案",
    "model": "CrossPlatform-v1",
    "firmware_version": "1.0.0"
  },
  "mqtt": {
    "broker_host": "test.mosquitto.org",
    "broker_port": 1883,
    "client_id": "cross_platform_device_001",
    "username": "",
    "password": "",
    "keepalive": 60,
    "qos": 1,
    "clean_session": true,
    "reconnect_interval": 5,
    "max_reconnect_attempts": 10
  },
  "rtk": {
    "tenant": "demo_tenant",
    "site": "demo_site",
    "version": "v1",
    "topic_prefix": "rtk"
  },
  "platform_settings": {
    "target_platform": "auto_detect",
    "posix": {
      "thread_stack_size": 8192,
      "use_pthread": true,
      "signal_handling": true
    },
    "windows": {
      "thread_stack_size": 8192,
      "use_winapi": true,
      "service_mode": false
    },
    "freertos": {
      "task_stack_size": 4096,
      "task_priority": 2,
      "heap_size": 32768,
      "use_static_allocation": false
    }
  },
  "performance": {
    "publish_interval": 30,
    "health_check_interval": 60,
    "network_timeout": 10,
    "retry_attempts": 3
  },
  "logging": {
    "level": "info",
    "console_output": true,
    "file_output": false,
    "platform_specific_logging": true
  },
  "features": {
    "platform_detection": true,
    "resource_monitoring": true,
    "cross_platform_metrics": true,
    "adaptive_behavior": true
  }
}